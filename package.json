{
  "name": "rails-project-navigator",
  "displayName": "Rails Project Navigator",
  "description": "Easily navigate the files in Rails applications",
  "version": "0.0.8",
  "publisher": "brandoncc",
  "repository": "https://github.com/brandoncc/rails-project-navigator",
  "engines": {
    "vscode": "^1.11.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:railsProjectNavigator.navigate"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [
      {
        "command": "railsProjectNavigator.navigate",
        "title": "Navigate Rails Project"
      }
    ],
    "configuration": {
      "properties": {
        "rails-project-navigator.categories": {
          "type": "object",
          "description": "Configuration for the categories which are listed and how they display files",
          "default": [{
            "name": "Config",
            "path": "config",
            "exclusionGlob": "config/initializers/**/*.*"
          }, {
            "name": "Controllers",
            "path": "app/controllers"
          }, {
            "name":"Helpers",
            "path": "app/helpers"
          }, {
            "name":"Initializers",
            "path": "config/initializers"
          }, {
            "name":"Jobs",
            "path": "app/jobs"
          }, {
            "name":"Layouts",
            "path": "app/views/layouts"
          }, {
            "name":"Mailers",
            "path": "app/mailers"
          }, {
            "name":"Migrations",
            "path": "db/migrate"
          }, {
            "name":"Models",
            "path": "app/models"
          }, {
            "name":"Specs",
            "path": "spec"
          }, {
            "name":"Tests",
            "path": "test"
          }, {
            "name":"Views",
            "path": "app/views",
            "exclusionGlob": "app/views/layouts/**/*.*"
          }]
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "chai": "^3.5.0",
    "eslint": "^3.6.0",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  }
}
